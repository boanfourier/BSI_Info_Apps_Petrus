<div class="row">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Edit Category</h1>
    </div>

    <div class="col-lg-12">
        <!-- Basic Card Example -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Edit Tasks</h6>
            </div>
            <div class="card-body">
                @Html.Raw(ViewData["message"])
                <form asp-action="Edit">
                    <div class="form-group">
                        <label for="task_id">task_id :</label>
                        <input type="text" class="form-control" name="task_id" value="@Model.task_id" readonly />
                    </div>
                    <div class="form-group">
                        <label for="event_id">Name :</label>
                        <input type="text" class="form-control" name="event_id" value="@Model.event_id" />
                    </div>
                    <div class="form-group">
                        <label for="description">Description :</label>
                        <input type="text" class="form-control" name="description" value="@Model.description" />
                    </div>
                    <div class="form-group">
                        <label for="deadline">Deadline :</label>
                        <input type="text" class="form-control" name="deadline" value="@Model.deadline" />
                    </div>
                    <div class="form-group">
                        <label for="status">Status :</label>
                        <input type="text" class="form-control" name="status" value="@Model.status" />
                    </div>

                    <div class="form-group">
                        <input type="Submit" class="btn btn-success btn-sm" value="Edit" />
                    </div>
                </form>
            </div>
        </div>

    </div>

</div>
