<div class="row">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Edit Category</h1>
    </div>

    <div class="col-lg-12">
        <!-- Basic Card Example -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Edit Category</h6>
            </div>
            <div class="card-body">
                @Html.Raw(ViewData["message"])
                <form asp-action="Edit">
                    <div class="form-group">
                        <label for="event_id">Events ID :</label>
                        <input type="text" class="form-control" name="event_id" readonly value="@Model.event_id" />
                    </div>
                    <div class="form-group">
                        <label for="event_name">Events Name :</label>
                        <input type="text" class="form-control" name="event_name" value="@Model.event_name" />
                    </div>
                    <div class="form-group">
                        <label for="description">Description :</label>
                        <input type="text" class="form-control" name="description" value="@Model.description" />
                    </div>
                    <div class="form-group">
                        <label for="start_date">start_date :</label>
                        <input type="text" class="form-control" name="start_date" value="@Model.start_date" />
                    </div>
                    <div class="form-group">
                        <label for="end_date">end_date :</label>
                        <input type="text" class="form-control" name="end_date" value="@Model.end_date" />
                    </div>
                    <div class="form-group">
                        <label for="location_id">location_id :</label>
                        <input type="text" class="form-control" name="location_id" value="@Model.location_id" />
                    </div>
                    <div class="form-group">
                        <label for="organizer_id">organizer_id :</label>
                        <input type="text" class="form-control" name="organizer_id" value="@Model.organizer_id" />
                    </div>

                    <div class="form-group">
                        <input type="Submit" class="btn btn-success btn-sm" value="Edit" />
                    </div>
                </form>
            </div>
        </div>

    </div>

</div>
