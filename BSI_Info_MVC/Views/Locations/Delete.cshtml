<div class="row">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Delete Events</h1>
    </div>

    <div class="col-lg-12">
        <!-- Basic Card Example -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Delete Events</h6>
            </div>
            <div class="card-body">
                <p>Are you sure ?</p>
                <form asp-action="Delete">
                    <div class="form-group">
                        <label for="location_id">location_id:</label>
                        <input type="text" class="form-control" name="location_id" readonly value="@Model.location_id" />
                    </div>
                    <div class="form-group">
                        <label for="name">Name :</label>
                        <input type="text" class="form-control" name="name" value="@Model.name" />
                    </div>
                    <div class="form-group">
                        <label for="address"> Address :</label>
                        <input type="text" class="form-control" name="address" value="@Model.address" />
                    </div>
                    <div class="form-group">
                        <label for="capacity"> capacity :</label>
                        <input type="text" class="form-control" name="capacity" value="@Model.capacity" />
                    </div>
                    <div class="form-group">
                        <label for="description"> description :</label>
                        <input type="text" class="form-control" name="description" value="@Model.description" />
                    </div>
                    <div class="form-group">
                        <input type="Submit" class="btn btn-danger btn-sm" value="Delete" />
                    </div>
                </form>
            </div>
        </div>

    </div>

</div>
