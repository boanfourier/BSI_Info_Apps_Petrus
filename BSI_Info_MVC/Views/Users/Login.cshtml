@model BSI_Info_BLL.DTO.LoginDTO
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!--=============== REMIXICONS ===============-->
    <link href="https://cdn.jsdelivr.net/npm/remixicon@2.5.0/fonts/remixicon.css" rel="stylesheet">

    <!--=============== CSS ===============-->
    <link rel="stylesheet" href="~/assets/css/styles.css">

    <title>Login BSI Info</title>
</head>
<body>
    <div class="login">
        <img src="~/assets/img/login-bg.png" alt="login image" class="login__img">

        <form asp-action="Login" class="login__form">
     
            <div class="form-group login__content">
                <div class="login__box">
                    <i class="ri-user-3-line login__icon"></i>

                    <div class="login__box-input">
                        <input asp-for="Username" class="login__input form-control form-control-user"
                               aria-describedby="emailHelp"
                               placeholder="Enter Email Address..." />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                </div>

                <div class="login__box">
                    <i class="ri-lock-2-line login__icon"></i>

                    <div class="login__box-input">
                        <input asp-for="Password" class="login__input form-control form-control-user"
                               placeholder="Password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                        <i class="ri-eye-off-line login__eye" id="login-eye"></i>
                    </div>
                </div>
            </div>

            <div class="login__check">
                <div class="login__check-group">
                    <input type="checkbox" class="login__check-input custom-control-input" id="customCheck">
                    <label class="login__check-label custom-control-label" for="customCheck">
                        Remember Me
                    </label>
                </div>

                <a href="#" class="login__forgot">Forgot Password?</a>
            </div>

            <button type="submit" class="login__button btn btn-primary btn-user btn-block">Login</button>
            <p class="login__register">
                Don't have an account? <a href="Register">Register</a>
            </p>
        </form>

    </div>

    <!--=============== MAIN JS ===============-->
    <script src="~/assets/js/main.js"></script>
</body>
</html>