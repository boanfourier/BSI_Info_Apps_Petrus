@model IEnumerable<BSI_Info_BLL.DTO.NotesDTO>

@{
    ViewData["Title"] = "List Of Notes";
}
<div class="row">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Notes Page</h1>
    </div>

    <div class="col-lg-12">
        <!-- Basic Card Example -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Notes Page</h6>
            </div>
            <div class="card-body">
                @Html.Raw(ViewData["message"])

                <form asp-action="Index" method="get" class="form-inline">
                    <p>
                        <input type="text" id="search" class="form-control" name="search" value="@ViewData["search"]"
                               placeholder="search notes name" />
                        &nbsp;
                        <input type="submit" class="btn btn-primary btn-sm" value="Search" />
                    </p>
                </form>

                <a asp-action="Create" class="btn btn-success btn-sm">Create New Notes</a><br /><br />
                <table class="table table-striped">
                    <tr>
                        <th> Notes ID</th>
                        <th>Event ID</th>
                        <th>note_text</th>
                        <th>created_at</th>
                        <th>&nbsp;</th>
                        <th>&nbsp;</th>
                    </tr>

                    @foreach (var notes in Model)
                    {
                        <tr>
                            <td>@notes.note_id</td>
                            <td>@notes.event_id</td>
                            <td>@notes.note_text</td>
                            <td>@notes.created_at</td>

                            <td><a asp-action="Edit" asp-route-id="@notes.note_id" class="btn btn-warning btn-sm">edit</a></td>
                            <td><a asp-action="Delete" asp-route-id="@notes.note_id" class="btn btn-danger btn-sm">delete</a></td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
</div>
