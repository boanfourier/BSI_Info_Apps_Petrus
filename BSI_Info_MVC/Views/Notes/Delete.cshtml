<div class="row">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Delete Notes</h1>
    </div>

    <div class="col-lg-12">
        <!-- Basic Card Example -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Delete Notes</h6>
            </div>
            <div class="card-body">
                <p>Are you sure ?</p>
                <form asp-action="Delete">
                    <div class="form-group">
                        <label for="note_id">note_id:</label>
                        <input type="text" class="form-control" name="note_id" readonly value="@Model.note_id" />
                    </div>
                    <div class="form-group">
                        <label for="event_id">event_id :</label>
                        <input type="text" class="form-control" name="event_id" value="@Model.event_id" />
                    </div>
                    <div class="form-group">
                        <label for="note_text"> note_text :</label>
                        <input type="text" class="form-control" name="note_text" value="@Model.note_text" />
                    </div>
                    <div class="form-group">
                        <label for="created_at"> created_at :</label>
                        <input type="text" class="form-control" name="created_at" value="@Model.created_at" />
                    </div>
                    <div class="form-group">
                        <input type="Submit" class="btn btn-danger btn-sm" value="Delete" />
                    </div>
                </form>
            </div>
        </div>

    </div>

</div>
